<project name="lightweight-game" default="build">
  <!-- Generated by MPS -->
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/lightweight-game" />
  <property name="build.layout" location="${build.dir}/artifacts/lightweight-game" />
  
  <target name="assemble" depends="classes, declare-mps-tasks">
    <mkdir dir="${build.layout}" />
    <mkdir dir="${build.tmp}/default/educational-game.jar" />
    <manifest file="${build.tmp}/default/MANIFEST.MF">
      <attribute name="Main-Class" value="com.zetcode.Mathsweeper" />
    </manifest>
    <jar destfile="${build.layout}/educational-game.jar" manifest="${build.tmp}/default/MANIFEST.MF" duplicate="preserve">
      <fileset dir="${build.tmp}/default/educational-game.jar" />
    </jar>
  </target>
  
  <target name="buildDependents" />
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
  
  <target name="compileJava" />
  
  <target name="processResources" />
  
  <target name="classes" depends="compileJava, processResources" />
  
  <target name="test" depends="classes" />
  
  <target name="check" depends="test" />
  
  <target name="generate" depends="declare-mps-tasks" />
  
  <target name="declare-mps-tasks" />
  
  <target name="makeDependents" />
</project>